<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/bg_radius_light"
    android:backgroundTint="@color/white"
    android:paddingHorizontal="@dimen/_15sdp">

    <ImageView
        android:id="@+id/IvShare"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_share"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@id/TvTransaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/TvGroupName" />

    <TextView
        android:id="@+id/TvTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_bold"
        android:text="@string/_6_transactions_6000_spent"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/IvShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvGroupName" />

    <TextView
        android:id="@+id/TvGroupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_bold"
        android:gravity="bottom"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:text="@string/group_name"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toStartOf="@+id/IvShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConsView"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvTransaction" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ConsView">

        <TextView
            android:id="@+id/TvHLetter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_50"
            android:fontFamily="@font/main_bold"
            android:gravity="center"
            android:text="H"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/TvALetter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.09" />

        <TextView
            android:id="@+id/TvForLetter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border"
            android:fontFamily="@font/main_bold"
            android:gravity="center"
            android:text="+4"
            android:textColor="@color/main_color"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/TvHLetter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.09" />

        <TextView
            android:id="@+id/TvALetter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_50"
            android:fontFamily="@font/main_bold"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.09" />

        <TextView
            android:id="@+id/TvCreateGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/main_bold"
            android:text="@string/date"
            android:textColor="@color/light_text_color"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>