<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:paddingTop="@dimen/_16sdp">

    <TextView
        android:id="@+id/TvGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:fontFamily="@font/main_bold"
        android:gravity="bottom"
        android:text="@string/create_group"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toTopOf="@id/TvSubTitle"
        app:layout_constraintEnd_toStartOf="@+id/ConsRight"
        app:layout_constraintStart_toEndOf="@id/ConsLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:fontFamily="@font/main_bold"
        android:gravity="top"
        android:text="@string/create_group"
        android:textColor="@color/hint_text_color"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/TvGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ConsRight"
        app:layout_constraintStart_toEndOf="@id/ConsLeft"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConsLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConsRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:id="@+id/TvRightView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg"
            android:fontFamily="@font/main_bold"
            android:gravity="center"
            android:text="@string/create"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>