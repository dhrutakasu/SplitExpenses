            android:name=".ui.Activities.AddMemberActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.CreateGroupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Activities.SelectLanguageActivity"
            android:exported="false" />
